{%- liquid
  assign section_color = section.settings.color_scheme
  assign enable_video_looping = section.settings.enable_video_looping

  assign thumbnails_desktop = section.settings.thumbnails_desktop
  assign thumbnails_mobile = section.settings.thumbnails_mobile

  assign active_thumbnail_style = section.settings.active_thumbnail_style

  assign thumbnails_ratio = section.settings.thumbnails_crop | plus: 0

  assign preselect_variant = section.settings.preselect_variant

  if preselect_variant
    assign always_show_product_featured_media_first = section.settings.always_show_product_featured_media_first
  else
    assign always_show_product_featured_media_first = true
  endif

  assign models = product.media | where: 'media_type', 'model'

  assign desktop_media_width = section.settings.desktop_media_width

  case desktop_media_width
    when 'one-third'
      assign content_width_desktop = 'lg:col-span-8'

      assign media_sizes = '(min-width: 1024px) calc(100vw / 3), 100vw'

      assign vertical_thumbnails_sizes = 'calc((100vw / 3) / 5)'
      assign horizontal_thumbnails_sizes = '(min-width: 1024px) calc((100vw / 3) / 5), 20vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-9 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-4'
      endif
    when 'one-half'
      assign content_width_desktop = 'lg:col-span-6'

      assign media_sizes = '(min-width: 1024px) 50vw, 100vw'

      assign vertical_thumbnails_sizes = '10vw'
      assign horizontal_thumbnails_sizes = '(min-width: 1024px) 10vw, 20vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-7 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-6'
      endif
    when 'three-fifths'
      assign content_width_desktop = 'lg:col-span-5'

      assign media_sizes = '(min-width: 1024px) calc(100vw / 5 * 3), 100vw'

      assign vertical_thumbnails_sizes = 'calc((100vw / 5 * 3) / 5)'
      assign horizontal_thumbnails_sizes = '(min-width: 1024px) calc((100vw / 5 * 3) / 5), 20vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-6 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-7'
      endif
    when 'two-thirds'
      assign content_width_desktop = 'lg:col-span-4'

      assign media_sizes = '(min-width: 1024px) calc(100vw / 3 * 2), 100vw'

      assign vertical_thumbnails_sizes = 'calc((100vw / 3 * 2) / 5)'
      assign horizontal_thumbnails_sizes = '(min-width: 1024px) calc((100vw / 3 * 2) / 5), 20vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-5 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-8'
      endif
  endcase

  assign current_variant = product.selected_or_first_available_variant

  assign featured_media = product.featured_media

  assign image_index = 0

  assign images_size = product.media | where: 'media_type', 'image' | size
  assign product_media_size = product.media | size

  if images_size < product_media_size
    assign has_interactive_media = true
  else
    assign has_interactive_media = false
  endif

  if featured_media
    # theme-check-disable VariableName
    # https://github.com/Shopify/theme-tools/issues/397
    assign featured_media_position0 = featured_media.position | minus: 1
    # theme-check-enable VariableName
    assign remaining = product_media_size | minus: featured_media.position

    assign featured_media_slice = product.media | slice: featured_media_position0, 1
    assign first_half = product.media | slice: 0, featured_media_position0
    assign second_half = product.media | slice: featured_media.position, remaining
    assign media_array = featured_media_slice | concat: first_half | concat: second_half
  else
    assign media_array = product.media
  endif

  if section.settings.variant_media_behavior == 'scroll'
    assign media_scroll_to = true
  else
    assign media_scroll_to = false
  endif

  assign single_variant_mode = false

  unless product.has_only_default_variant or product.variants_count > 250
    assign single_variant_mode = section.settings.single_variant_mode
  endunless

  if single_variant_mode
    assign variants_with_media = product.variants | where: 'featured_media'
    assign first_variant_media = variants_with_media | map: 'featured_media' | first
    assign variant_media_ids_array = variants_with_media | map: 'featured_media' | map: 'id' | uniq

    if always_show_product_featured_media_first
      # If there is no non-variant media, reset some assumptions
      if first_variant_media.position == 1
        assign always_show_product_featured_media_first = false
        assign featured_media = current_variant.featured_media
      endif
    endif
  endif

  assign complementary_products_block = section.blocks | where: 'type', 'complementary' | first

  assign has_borders = true
  if settings.border_width == 0
    assign has_borders = false
  endif
-%}

<data-island
  class="grid grid-flow-row-dense grid-cols-1 border-b-gridline border-gridline-color lg:grid-cols-12 lg:gap-gutter lg:bg-gridline-color [&:not(:has(.product-media-container):has(.product-content-container))]:lg:bg-scheme-background {% if product.media.size == 0 %}-mt-gridline{% endif %}"
  id="{{ section.id }}"
  x-data="
    Product({
      product: {
        id: {{ product.id | json }},
        url: {{ product.url | json | escape }},
      },
      featuredMediaId: {% if featured_media %}{{ featured_media.id }}{% else %}null{% endif %},
      splideOnDesktop: true,
      mediaScrollTo: {{ media_scroll_to }},
      singleVariantMode: {{ single_variant_mode }},
      alwaysShowProductFeaturedMediaFirst:
        {{ always_show_product_featured_media_first }},
      shouldUpdateHistoryState: true,
      preselectVariant: {{ preselect_variant }},
      templateType: 'thumbnails',
    })
  "
  src="product"
  role="banner"
  data-product-root="{{ section.id }}"
  data-color-scheme="{{ section_color }}"
>
  <div
    class="product-media-container relative bg-scheme-background text-scheme-text {{ media_width_desktop }} {% if product.media.size > 1 and thumbnails_desktop == 'vertical_carousel' %}lg:grid lg:grid-cols-5 lg:[&>div:nth-of-type(1)]:col-span-1 lg:[&>div:nth-of-type(2)]:col-span-4 {% if section.settings.desktop_media_position == 'right' %}[&>div:nth-of-type(1)]:order-2{% endif %}{% endif %}"
    data-product-media-container
  >
    {%- liquid
      if product.media.size > 1 and thumbnails_desktop == 'vertical_carousel'
        render 'product-thumbnails-vertical-carousel', desktop_media_position: section.settings.desktop_media_position, media_array: media_array, thumbnails_ratio: thumbnails_ratio, active_thumbnail_style: active_thumbnail_style, sizes: vertical_thumbnails_sizes, single_variant_mode: single_variant_mode, variant_media_ids_array: variant_media_ids_array
      endif
    -%}
    <div
      class="splide splide--product lg:!sticky lg:top-sticky-header-less-gridline lg:-mb-gridline"
      data-drag-disabled="{{ has_interactive_media }}"
      {% if product.media.size > 1 %}
        data-slideshow-enabled="true"
      {% endif %}
      x-ref="splide"
    >
      <div class="splide__track border-b-gridline border-gridline-color transition-[max-height]">
        <ul
          id="media-list-{{ product.id }}-{{ section.id }}"
          class="splide__list"
          x-ref="mediaList"
        >
          {% for media in media_array %}
            {%- liquid
              assign preload = false
              assign loading = 'lazy'

              if section.index == 1 and forloop.first
                assign preload = true
              endif

              if section.index <= 3
                if forloop.index <= 2
                  assign loading = 'eager'
                elsif always_show_product_featured_media_first == false and media.id == current_variant.featured_media.id
                  assign loading = 'eager'
                endif
              endif

              if single_variant_mode
                if forloop.first
                  assign media_group_id = media.id
                endif

                if variant_media_ids_array contains media.id
                  assign media_group_id = media.id
                endif
              endif
            -%}
            <li
              class="splide__slide bg-scheme-background {% unless media.id == featured_media.id %}[.splide:not(.is-active)_&]:hidden{% endunless %}"
              data-index="{{ forloop.index0 }}"
              {% if single_variant_mode %}
                {% if media_group_id %}
                  data-media-group-id="{{ media_group_id }}"
                {% endif %}
              {% endif %}
            >
              {%- render 'product-media',
                media: media,
                sizes: media_sizes,
                image_index: image_index,
                scroll_to: media_scroll_to,
                enable_video_looping: enable_video_looping,
                needs_desktop_padding_on_wrapper: true,
                preload: preload,
                loading: loading
              -%}
            </li>

            {%- liquid
              if media.media_type == 'image'
                assign image_index = image_index | plus: 1
              endif
            -%}
          {% endfor %}
        </ul>
      </div>
      {% assign first_3d_model = models | first %}
      {%- if first_3d_model %}
        <div class="border-b-gridline border-gridline-color px-2 py-section-vertical-spacing text-center lg:px-4 [&:has([data-shopify-xr-hidden])]:hidden">
          <button
            aria-label="{{ 'products.product.view_in_space_label' | t }}"
            class="product-single__view-in-space my-1 w-full max-w-sm border-text border-scheme-text py-2 pl-2 pr-4 text-center"
            data-shopify-xr
            data-shopify-model3d-id="{{ first_3d_model.id }}"
            data-shopify-title="{{ product.title }}"
            data-shopify-xr-hidden
          >
            <span class="inline-block w-6 align-middle">
              {%- render 'icon-3d-model' -%}</span
            ><span class="text-sm">
              {{- 'products.product.view_in_space' | t -}}
            </span>
          </button>
        </div>
      {%- endif -%}

      {%- if product.media.size > 1 -%}
        {% liquid
          if thumbnails_desktop == 'grid' or thumbnails_mobile == 'grid'
            assign mobile_only = false
            assign desktop_only = false

            if thumbnails_desktop != 'grid'
              assign mobile_only = true
            endif

            if thumbnails_mobile != 'grid'
              assign desktop_only = true
            endif
            if single_variant_mode
              render 'product-thumbnails-grid-single-variant-mode', media_array: media_array, variant_media_ids_array: variant_media_ids_array, thumbnails_ratio: thumbnails_ratio, active_thumbnail_style: active_thumbnail_style, sizes: horizontal_thumbnails_sizes, mobile_only: mobile_only, desktop_only: desktop_only
            else
              render 'product-thumbnails-grid', media_array: media_array, thumbnails_ratio: thumbnails_ratio, active_thumbnail_style: active_thumbnail_style, sizes: horizontal_thumbnails_sizes, mobile_only: mobile_only, desktop_only: desktop_only
            endif
          endif

          if thumbnails_desktop == 'horizontal_carousel' or thumbnails_mobile == 'horizontal_carousel'
            assign mobile_only = false
            assign desktop_only = false

            if thumbnails_desktop != 'horizontal_carousel'
              assign mobile_only = true
            endif

            if thumbnails_mobile != 'horizontal_carousel'
              assign desktop_only = true
            endif

            render 'product-thumbnails-horizontal-carousel', desktop_media_position: section.settings.desktop_media_position, media_array: media_array, thumbnails_ratio: thumbnails_ratio, active_thumbnail_style: active_thumbnail_style, sizes: horizontal_thumbnails_sizes, mobile_only: mobile_only, desktop_only: desktop_only, single_variant_mode: single_variant_mode, variant_media_ids_array: variant_media_ids_array
          endif
        %}
      {%- endif -%}

      {% if product.media.size > 1 %}
        {%- liquid
          assign show_nav_on_mobile = false
          assign show_nav_on_desktop = false

          if thumbnails_mobile == 'none' or thumbnails_mobile == 'horizontal_carousel'
            assign show_nav_on_mobile = true
          endif

          if thumbnails_desktop contains 'carousel'
            assign show_nav_on_desktop = true
          endif

          assign nav_display_classes = ''

          if show_nav_on_mobile
            assign nav_display_classes = 'grid'
          else
            assign nav_display_classes = 'hidden'
          endif

          if show_nav_on_desktop
            assign nav_display_classes = nav_display_classes | append: ' lg:grid'
          else
            assign nav_display_classes = nav_display_classes | append: ' lg:hidden'
          endif
        -%}
        <data-island
          class="{{ nav_display_classes }} min-h-[theme(spacing.3)] grid-cols-[minmax(0,_1fr)_auto] {% if settings.slideshow_pagination_style == 'dots' %}gap-2{% else %}gap-3 md:gap-10{% endif %} mx-1 pb-product-slide-controls pt-section-vertical-spacing-half no-js:hidden lg:mx-4"
          data-slideshow-navigation
          x-data="SlideshowPagination"
          x-init="checkIfWrapped"
          @resize.window.debounce.250="checkIfWrapped"
          x-show="slideCount > 1"
          :class="{ 'opacity-0' : !splideIsReady }"
        >
          <ul x-ref="pagination" class="splide__pagination">
            {% unless single_variant_mode %}
              {% for i in (1..product.media.size) %}
                <li
                  data-splide-pagination-placeholder
                  aria-hidden="true"
                ></li>
              {% endfor %}
            {% endunless %}
          </ul>
          <div
            class="splide__arrows col-end-last flex items-center justify-end gap-1 text-scheme-text"
            :class="{ 'items-start pt-[--arrows-wrapped-top-offset]' : paginationIsWrapped, 'items-center' : !paginationIsWrapped }"
          >
            <button class="splide__arrow splide__arrow--prev w-8">
              <span class="sr-only">
                {{- 'sections.slideshow.previous_slide' | t -}}
              </span>
              <span class="block">{% render 'icon-arrow-left' %}</span>
            </button>
            <button class="splide__arrow splide__arrow--next w-8">
              <span class="sr-only">
                {{- 'sections.slideshow.next_slide' | t -}}
              </span>
              <span class="block">{% render 'icon-arrow-right' %}</span>
            </button>
          </div>
        </data-island>
      {% endif %}
    </div>
  </div>

  <div
    class="product-content-container bg-scheme-background px-section-horizontal-spacing text-scheme-text {{ content_width_desktop }} {% if product.media.size > 1 %}is-below-slideshow{% endif %}"
  >
    <div
      class="product-block-area py-section-vertical-spacing lg:sticky lg:top-sticky-header {{ section.settings.max_width_of_content }}"
      data-product-content
    >
      {%- render 'product-form',
        current_variant: current_variant,
        section_color: section_color,
        has_borders: has_borders,
        preselect_variant: preselect_variant
      -%}
    </div>
  </div>

  {% unless product == empty %}
    {% if models.size %}
      <script type="application/json" id="ModelJson-{{ section.id }}">
        {{ product.media | where: 'media_type', 'model' | json }}
      </script>
      {% render 'product-shopify-xr-script' %}
    {% endif %}
  {% endunless %}

  <div data-variant-fragment="current-variant" hidden>
    {% if current_variant %}
      <script data-current-variant type="application/json">
        {{ current_variant | json }}
      </script>
    {% endif %}
  </div>
</data-island>

{%- liquid
  if section.settings.enable_image_zoom
    render 'product-image-zoom'
  endif

  if section.settings.override_header_footer_color_scheme
    render 'header-footer-color-scheme-override', section_color: section_color
  endif
-%}

{% assign current_variant = product.selected_or_first_available_variant %}

<script type="application/ld+json">
  {{ product | structured_data }}
</script>

{%- liquid
  if complementary_products_block
    case desktop_media_width
      when 'one-third'
        assign desktop_content_column_sizes_base = 'calc(100vw / 3)'
      when 'one-half'
        assign desktop_content_column_sizes_base = '50vw'
      when 'three-fifths'
        assign desktop_content_column_sizes_base = '40vw'
      when 'two-thirds'
        assign desktop_content_column_sizes_base = 'calc((100vw / 3 * 2))'
    endcase

    # theme-check-disable NestedSnippet
    render 'product-block-complementary-products-output', block: complementary_products_block, desktop_sizes_base: desktop_content_column_sizes_base
    # theme-check-enable NestedSnippet
  endif
-%}

