{%- liquid
  assign section_color = section.settings.color_scheme
  assign enable_video_looping = section.settings.enable_video_looping

  assign desktop_media_width = section.settings.desktop_media_width

  assign preselect_variant = section.settings.preselect_variant

  case desktop_media_width
    when 'one-third'
      assign content_width_desktop = 'lg:col-span-8'

      assign media_sizes = '(min-width: 1024px) calc(100vw / 3), 100vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-9 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-4'
      endif
    when 'one-half'
      assign content_width_desktop = 'lg:col-span-6'

      assign media_sizes = '(min-width: 1024px) 50vw, 100vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-7 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-6'
      endif
    when 'three-fifths'
      assign content_width_desktop = 'lg:col-span-5'

      assign media_sizes = '(min-width: 1024px) calc(100vw / 5 * 3), 100vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-6 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-7'
      endif
    when 'two-thirds'
      assign content_width_desktop = 'lg:col-span-4'

      assign media_sizes = '(min-width: 1024px) calc(100vw / 3 * 2), 100vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-5 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-8'
      endif
  endcase

  assign product = all_products[section.settings.product]

  assign current_variant = product.selected_or_first_available_variant

  if preselect_variant
    assign always_show_product_featured_media_first = section.settings.always_show_product_featured_media_first
  else
    assign always_show_product_featured_media_first = true
  endif

  assign complementary_products_block = section.blocks | where: 'type', 'complementary' | first

  assign preload = false
  assign loading = 'lazy'

  if section.index == 1
    assign preload = true
  endif

  if section.index <= 3
    assign loading = 'eager'
  endif

  assign has_borders = true
  if settings.border_width == 0
    assign has_borders = false
  endif

  assign has_single_video_media = false
  if product.media.size == 1 and product.media[0].media_type == 'video'
    assign has_single_video_media = true
  endif

  unless section.settings.desktop_content_position == 'sticky'
    assign desktop_content_position_class = section.settings.desktop_content_position
  else
    assign desktop_content_position_class = 'items-start '
    assign sticky_classes = 'lg:sticky lg:top-sticky-header '
  endunless
-%}

{% if product != blank %}
  <data-island
    class="grid grid-flow-row-dense grid-cols-1 border-b-gridline border-gridline-color lg:grid-cols-12 lg:gap-gutter lg:bg-gridline-color"
    x-data="
      Product({
        product: {
          id: {{ product.id | json }},
          url: {{ product.url | json | escape }},
        },
        optionsWithValues: {{ product.options_with_values | json | escape }},
        preselectVariant: {{ preselect_variant }},
        singleVariantMode: false,
        skipMediaUpdates: true,
        featuredMediaId: null,
        shouldUpdateHistoryState: false,
      })
    "
    src="product"
    role="banner"
    data-product-root="{{ section.id }}"
    data-enable-image-zoom="false"
    data-color-scheme="{{ section_color }}"
  >
    <div
      class="{% if product.media.size == 0 %}hidden lg:flex{% else %}flex{% endif %} product-media-container relative bg-scheme-background text-scheme-text {{ media_width_desktop }}{% if settings.grid_media_style == 'fill' %} max-lg:border-b-gridline max-lg:border-gridline-color{% endif %}"
      data-product-media-container
    >
      <div class="w-full">
        <div
          class="lg:sticky lg:top-sticky-header{% if settings.grid_media_style == 'fill' %} border-gridline-color -mb-gridline{% if has_single_video_media %} border-b-gridline-double{% else %} border-b-gridline{% endif %}{% endif %}"
          data-variant-fragment="media"
        >
          {% liquid
            assign current_media = null

            if product.media.size > 0
              unless always_show_product_featured_media_first
                assign current_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media
              else
                assign current_media = product.selected_variant.featured_media | default: product.featured_media
              endunless
            endif
          %}
          {% render 'product-media',
            media: current_media,
            sizes: media_sizes,
            enable_video_looping: enable_video_looping,
            preload: preload,
            loading: loading
          %}
        </div>
        {% assign first_3d_model = product.media
          | where: 'media_type', 'model'
          | first
        %}
        {%- if first_3d_model -%}
          <div class="px-section-horizontal-spacing text-center">
            <button
              aria-label="{{ 'products.product.view_in_space_label' | t }}"
              class="product-single__view-in-space mb-2 mt-4 w-full max-w-sm border-text border-scheme-text py-2 pl-2 pr-4 text-center lg:my-4"
              data-shopify-xr
              data-shopify-model3d-id="{{ first_3d_model.id }}"
              data-shopify-title="{{ product.title }}"
              data-shopify-xr-hidden
            >
              <span class="inline-block w-6 align-middle">
                {%- render 'icon-3d-model' -%}</span
              ><span class="text-sm">
                {{- 'products.product.view_in_space' | t -}}
              </span>
            </button>
          </div>
        {%- endif -%}
      </div>
    </div>

    <div
      class="flex {{ desktop_content_position_class }} product-content-container product-content-container--product-section bg-scheme-background px-section-horizontal-spacing text-scheme-text {{ content_width_desktop }}"
    >
      <div class="product-block-area w-full py-section-vertical-spacing {{ section.settings.max_width_of_content }} {{ sticky_classes }}">
        {%- render 'product-form',
          product: product,
          current_variant: current_variant,
          section_color: section_color,
          featured_product_section: true,
          has_borders: has_borders,
          preselect_variant: preselect_variant
        -%}
      </div>
    </div>

    {% unless product == empty %}
      <script type="application/json" id="ModelJson-{{ section.id }}">
        {{ product.media | where: 'media_type', 'model' | json }}
      </script>
    {% endunless %}

    <div data-variant-fragment="current-variant" hidden>
      {% if current_variant %}
        <script data-current-variant type="application/json">
          {{ current_variant | json }}
        </script>
      {% endif %}
    </div>
  </data-island>

  <script type="application/ld+json">
    {{ product | structured_data }}
  </script>
{% else %}
  <section
    class="grid grid-flow-row-dense grid-cols-1 border-b-gridline border-gridline-color lg:grid-cols-12 lg:gap-gutter lg:bg-gridline-color"
    data-color-scheme="{{ section_color }}"
  >
    <div
      class="product-media-container relative flex bg-scheme-background text-scheme-text {{ media_width_desktop }}"
      data-product-media-container
    >
      <div class="w-full border-b-gridline border-gridline-color lg:border-b-0">
        <ul class="lg:sticky lg:top-sticky-header lg:grid lg:w-full lg:grid-cols-1">
          <li class="p-grid-media bg-scheme-background{% if settings.grid_media_style == 'fill' %} w-full{% endif %}">
            {%- render 'image-crop-placeholder', type: 'product-1' -%}
          </li>
        </ul>
      </div>
    </div>

    <div class="flex {{ desktop_content_position_class }} product-content-container bg-scheme-background px-section-horizontal-spacing text-scheme-text {{ content_width_desktop }}">
      <div class="py-section-vertical-spacing {{ sticky_classes }}">
        <h2 class="font-heading text-heading-feature">
          {{ 'homepage.onboarding.product_title' | t }}
        </h2>

        <div class="mt-2 text-xl">
          <span>
            {%- if settings.currency_code_enabled == true -%}
              {{- 1999 | money_with_currency -}}
            {%- else -%}
              {{- 1999 | money -}}
            {%- endif -%}
          </span>
        </div>

        <div class="add-to-cart-container mt-8">
          <button
            class="add-to-cart theme-button w-fit cursor-not-allowed opacity-50 after:content-none"
            type="submit"
            disabled="disabled"
          >
            {{ 'products.product.unavailable' | t }}
          </button>
        </div>
      </div>
    </div>
  </section>
{% endif %}

{%- liquid
  if complementary_products_block
    case desktop_media_width
      when 'one-third'
        assign desktop_content_column_sizes_base = 'calc(100vw / 3)'
      when 'one-half'
        assign desktop_content_column_sizes_base = '50vw'
      when 'three-fifths'
        assign desktop_content_column_sizes_base = '40vw'
      when 'two-thirds'
        assign desktop_content_column_sizes_base = 'calc((100vw / 3 * 2))'
    endcase
    # theme-check-disable NestedSnippet
    render 'product-block-complementary-products-output', block: complementary_products_block, desktop_sizes_base: desktop_content_column_sizes_base
    # theme-check-enable NestedSnippet
  endif
-%}

