{%- liquid
  assign section_color = section.settings.color_scheme
  assign video = section.settings.video

  assign video_color_scheme = section.settings.video_color_scheme
  assign video_position = section.settings.video_position

  assign text_size_class = section.settings.text_size
  assign text_align = section.settings.text_alignment
  assign text_position = section.settings.text_position

  assign deep_inset = section.settings.deep_inset
  assign font = section.settings.font

  assign title = section.settings.title

  case section.settings.video_size
    when 'third'
      assign text_width_desktop = 'lg:col-span-8'

      if video_position == 'right'
        assign video_width_desktop = 'lg:col-start-9 lg:col-end-13'
      else
        assign video_width_desktop = 'lg:col-span-4'
      endif

      assign sizes = '(min-width: 1024px) calc(100vw / 3), 100vw'
    when 'half'
      assign text_width_desktop = 'lg:col-span-6'

      if video_position == 'right'
        assign video_width_desktop = 'lg:col-start-7 lg:col-end-13'
      else
        assign video_width_desktop = 'lg:col-span-6'
      endif

      assign sizes = '(min-width: 1024px) 50vw, 100vw'
    when 'two_thirds'
      assign text_width_desktop = 'lg:col-span-4'

      if video_position == 'right'
        assign video_width_desktop = 'lg:col-start-5 lg:col-end-13'
      else
        assign video_width_desktop = 'lg:col-span-8'
      endif

      assign sizes = '(min-width: 1024px) calc(100vw / 3 * 2), 100vw'
  endcase

  assign poster_preload = false
  assign poster_loading = 'lazy'

  if section.index == 1
    assign poster_preload = true
  endif

  if section.index <= 3
    assign poster_loading = 'eager'
  endif

  if deep_inset
    assign media_padding_class = 'p-deep-inset-media'
  else
    assign media_padding_class = 'p-grid-media'
  endif
-%}

<section class="grid grid-flow-row-dense grid-cols-1 gap-gutter overflow-hidden border-b-gridline border-gridline-color bg-gridline-color lg:grid-cols-12">
  <div
    class="bg-scheme-background {{ video_width_desktop }} {{ media_padding_class }}{% if settings.grid_media_style == 'inset' %} h-full w-full{% endif %}"
    data-color-scheme="{{ video_color_scheme }}"
  >
    <div class="relative min-h-full">
      {%- render 'video',
        video: video,
        sizes: sizes,
        mode: section.settings.mode,
        container_id: section.id,
        ratio: section.settings.video_aspect_ratio,
        poster_preload: poster_preload,
        poster_loading: poster_loading,
        is_deep_inset: deep_inset
      -%}
    </div>
  </div>

  <div
    class="{{ text_width_desktop }} relative flex bg-scheme-background px-section-horizontal-spacing py-section-vertical-spacing text-scheme-text {{ text_position }}"
    data-color-scheme="{{ section_color }}"
  >
    <div class="{{ text_align }} break-word w-full">
      {% render 'section-content',
        title: title,
        subheading: section.settings.subheading,
        text: section.settings.text,
        text_size_class: text_size_class,
        text_font_class: font,
        cta_link: section.settings.cta_link,
        cta_text: section.settings.cta_text,
        cta_style: section.settings.cta_style,
        cta_button_style: section.settings.cta_button_style
      %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Video with text",
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "aside"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "select",
      "id": "mode",
      "label": "Mode",
      "options": [
        {
          "value": "preview",
          "label": "Preview"
        },
        {
          "value": "autoplay",
          "label": "Autoplay"
        }
      ],
      "default": "preview",
      "info": "Autoplay will not play sound or show controls."
    },
    {
      "type": "select",
      "id": "video_position",
      "label": "Video position on desktop",
      "default": "right",
      "options": [
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "left",
          "label": "Left"
        }
      ]
    },
    {
      "type": "select",
      "id": "video_size",
      "label": "Video size on desktop",
      "default": "half",
      "options": [
        {
          "value": "third",
          "label": "One third"
        },
        {
          "value": "half",
          "label": "One half"
        },
        {
          "value": "two_thirds",
          "label": "Two thirds"
        }
      ]
    },
    {
      "type": "select",
      "id": "video_aspect_ratio",
      "label": "Aspect ratio",
      "options": [
        {
          "value": "natural",
          "label": "Natural"
        },
        {
          "value": "1",
          "label": "Square (1:1)"
        },
        {
          "value": "1.333",
          "label": "Landscape (4:3)"
        },
        {
          "value": "0.6667",
          "label": "Portrait (2:3)"
        },
        {
          "value": "1.778",
          "label": "Widescreen (16:9)"
        }
      ],
      "default": "natural"
    },
    {
      "type": "checkbox",
      "id": "deep_inset",
      "label": "Deep inset",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "fill_video",
      "label": "Fit video to text",
      "default": false,
      "info": "This setting will crop the image on desktop"
    },
    {
      "type": "color_scheme",
      "id": "video_color_scheme",
      "label": "Video color scheme",
      "info": "Video color scheme is used for background color if video is inset",
      "default": "scheme1"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "visible_if": "{{ section.settings.title != blank }}",
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "visible_if": "{{ section.settings.text != blank }}",
      "type": "select",
      "id": "font",
      "label": "Text font",
      "options": [
        {
          "value": "font-heading",
          "label": "Heading"
        },
        {
          "value": "font-body",
          "label": "Body"
        }
      ],
      "default": "font-body"
    },
    {
      "visible_if": "{{ section.settings.text != blank }}",
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "options": [
        {
          "value": "text-base",
          "label": "Body"
        },
        {
          "value": "text-heading-standard",
          "label": "Standard heading"
        },
        {
          "value": "text-heading-feature",
          "label": "Feature heading"
        },
        {
          "value": "text-heading-secondary",
          "label": "Secondary heading"
        }
      ],
      "default": "text-base"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ],
      "default": "text-left"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Position",
      "options": [
        {
          "value": "items-start",
          "label": "Top"
        },
        {
          "value": "items-center",
          "label": "Middle"
        },
        {
          "value": "items-end",
          "label": "Bottom"
        }
      ],
      "default": "items-center"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme1",
      "label": "Color scheme"
    },
    {
      "type": "header",
      "content": "Call to action"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "cta_style",
      "label": "Style",
      "options": [
        {
          "value": "link",
          "label": "Link"
        },
        {
          "value": "button",
          "label": "Button"
        }
      ],
      "default": "link"
    },
    {
      "visible_if": "{{ section.settings.cta_style == 'button' }}",
      "type": "select",
      "id": "cta_button_style",
      "label": "Button style",
      "default": "secondary",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video with text",
      "category": "Editorial"
    }
  ]
}
{% endschema %}
