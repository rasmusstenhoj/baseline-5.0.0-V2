{%- liquid
  assign section_color = section.settings.color_scheme

  assign image_color_scheme = section.settings.image_color_scheme
  assign image_position = section.settings.image_position

  assign text_size_class = section.settings.text_size
  assign text_align = section.settings.text_alignment
  assign text_position = section.settings.text_position

  assign fill_image = section.settings.fill_image
  assign deep_inset = section.settings.deep_inset

  if deep_inset
    assign media_padding_class = 'p-deep-inset-media'
  else
    assign media_padding_class = 'p-grid-media'
  endif

  assign ratio = section.settings.crop_image | plus: 0

  assign font = section.settings.font

  case section.settings.image_size
    when 'third'
      assign text_width_desktop = 'lg:col-span-8'

      if image_position == 'right'
        assign image_width_desktop = 'lg:col-start-9 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-4'
      endif

      assign sizes = '(min-width: 1024px) calc(100vw / 3), 100vw'
    when 'half'
      assign text_width_desktop = 'lg:col-span-6'

      if image_position == 'right'
        assign image_width_desktop = 'lg:col-start-7 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-6'
      endif

      assign sizes = '(min-width: 1024px) 50vw, 100vw'
    when 'two_thirds'
      assign text_width_desktop = 'lg:col-span-4'

      if image_position == 'right'
        assign image_width_desktop = 'lg:col-start-5 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-8'
      endif

      assign sizes = '(min-width: 1024px) calc(100vw / 3 * 2), 100vw'
  endcase
-%}

<section class="grid grid-flow-row-dense grid-cols-1 gap-gutter overflow-hidden border-b-gridline border-gridline-color bg-gridline-color lg:grid-cols-12">
  <div
    class="bg-scheme-background {{ image_width_desktop }} {{ media_padding_class }}{% if settings.grid_media_style == 'inset' %} h-full w-full{% endif %}"
    data-color-scheme="{{ image_color_scheme }}"
  >
    <div class="relative min-h-full">
      {%- if section.settings.image != blank -%}
        {%- liquid
          assign image = section.settings.image

          if section.index == 1
            assign preload = true
          else
            assign preload = false
          endif
        -%}
        {%- if fill_image -%}
          <div class="hidden lg:block">
            {% render 'image-fill',
              image: image,
              sizes: sizes,
              preload: preload,
              is_deep_inset: deep_inset
            %}
          </div>
          <div class="block lg:hidden">
            {% render 'image', image: image, sizes: sizes, preload: preload %}
          </div>
        {%- else -%}
          <div class="relative">
            {% render 'image-crop',
              image: image,
              sizes: sizes,
              preload: preload,
              ratio: ratio,
              is_deep_inset: deep_inset
            %}
          </div>
        {%- endif -%}
      {%- else -%}
        {%- render 'image-crop-placeholder',
          ratio: 1.3,
          is_deep_inset: deep_inset
        -%}
      {%- endif -%}
    </div>
  </div>

  <div
    class="{{ text_width_desktop }} relative flex bg-scheme-background px-section-horizontal-spacing py-section-vertical-spacing text-scheme-text {{ text_position }}"
    data-color-scheme="{{ section_color }}"
  >
    <div class="{{ text_align }} break-word w-full">
      {% render 'section-content',
        title: section.settings.title,
        subheading: section.settings.subheading,
        text: section.settings.text,
        text_size_class: text_size_class,
        text_font_class: font,
        cta_link: section.settings.cta_link,
        cta_text: section.settings.cta_text,
        cta_style: section.settings.cta_style,
        cta_button_style: section.settings.cta_button_style
      %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with text",
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "aside"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position on desktop",
      "default": "right",
      "options": [
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "left",
          "label": "Left"
        }
      ]
    },
    {
      "type": "select",
      "id": "image_size",
      "label": "Image size on desktop",
      "default": "half",
      "options": [
        {
          "value": "third",
          "label": "One third"
        },
        {
          "value": "half",
          "label": "One half"
        },
        {
          "value": "two_thirds",
          "label": "Two thirds"
        }
      ]
    },
    {
      "type": "select",
      "id": "crop_image",
      "label": "Crop image",
      "options": [
        {
          "value": "0",
          "label": "No crop"
        },
        {
          "value": "1.3",
          "label": "Landscape"
        },
        {
          "value": "1",
          "label": "Square"
        },
        {
          "value": "0.8",
          "label": "Portrait"
        }
      ],
      "default": "1"
    },
    {
      "type": "checkbox",
      "id": "deep_inset",
      "label": "Deep inset",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "fill_image",
      "label": "Fit image to text",
      "default": false,
      "info": "This setting will crop the image on desktop to the height of the text and override the “Crop image” setting"
    },
    {
      "type": "color_scheme",
      "id": "image_color_scheme",
      "label": "Image color scheme",
      "info": "Image color scheme is used for background color if image is inset.",
      "default": "scheme1"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "visible_if": "{{ section.settings.title != blank }}",
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "visible_if": "{{ section.settings.text != blank }}",
      "type": "select",
      "id": "font",
      "label": "Text font",
      "options": [
        {
          "value": "font-heading",
          "label": "Heading"
        },
        {
          "value": "font-body",
          "label": "Body"
        }
      ],
      "default": "font-body"
    },
    {
      "visible_if": "{{ section.settings.text != blank }}",
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "options": [
        {
          "value": "text-base",
          "label": "Body"
        },
        {
          "value": "text-heading-standard",
          "label": "Standard heading"
        },
        {
          "value": "text-heading-feature",
          "label": "Feature heading"
        },
        {
          "value": "text-heading-secondary",
          "label": "Secondary heading"
        }
      ],
      "default": "text-base"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ],
      "default": "text-left"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Position",
      "options": [
        {
          "value": "items-start",
          "label": "Top"
        },
        {
          "value": "items-center",
          "label": "Middle"
        },
        {
          "value": "items-end",
          "label": "Bottom"
        }
      ],
      "default": "items-center"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme1",
      "label": "Color scheme"
    },
    {
      "type": "header",
      "content": "Call to action"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "cta_style",
      "label": "Style",
      "options": [
        {
          "value": "link",
          "label": "Link"
        },
        {
          "value": "button",
          "label": "Button"
        }
      ],
      "default": "link"
    },
    {
      "visible_if": "{{ section.settings.cta_style == 'button' }}",
      "type": "select",
      "id": "cta_button_style",
      "label": "Button style",
      "default": "secondary",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text",
      "category": "Editorial"
    }
  ]
}
{% endschema %}
