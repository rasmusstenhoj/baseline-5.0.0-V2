{% render 'featured-links',
  section_color: section.settings.color_scheme,
  blocks: section.blocks,
  display: section.settings.display,
  paragraph_separator: section.settings.paragraph_separator,
  text_align: section.settings.text_alignment,
  show_media_on_hover: section.settings.show_media_on_hover,
  hover_media_position: 'over',
  dim_nonhovered_links: section.settings.dim_nonhovered_links,
  show_index_as_superscript: section.settings.show_index_as_superscript,
  display_link_as_button: section.settings.display_link_as_button,
  uppercase_link_title: section.settings.uppercase_link_title,
  mobile_text_scale: section.settings.mobile_text_scale,
  desktop_text_scale: section.settings.desktop_text_scale,
  button_style: section.settings.button_style,
  desktop_width: section.settings.desktop_width
%}

{% schema %}
{
  "name": "Custom links",
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "aside"
    ]
  },
  "settings": [
    {
      "type": "range",
      "id": "mobile_text_scale",
      "min": -2,
      "max": 4,
      "step": 1,
      "label": "Mobile font size scale",
      "default": 2
    },
    {
      "type": "range",
      "id": "desktop_text_scale",
      "min": -2,
      "max": 9,
      "step": 1,
      "label": "Desktop font size scale",
      "default": 7
    },
    {
      "type": "select",
      "id": "display",
      "label": "Display",
      "options": [
        {
          "value": "list",
          "label": "List"
        },
        {
          "value": "paragraph",
          "label": "Paragraph"
        },
        {
          "value": "list_mobile_paragraph_desktop",
          "label": "List mobile, paragraph desktop"
        }
      ],
      "default": "list"
    },
    {
      "visible_if": "{{ section.settings.display != 'list' }}",
      "type": "select",
      "id": "paragraph_separator",
      "label": "Paragraph word separator",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "hyphen",
          "label": "Hyphen"
        },
        {
          "value": "emdash",
          "label": "Emdash"
        },
        {
          "value": "dot",
          "label": "Dot"
        },
        {
          "value": "bullet",
          "label": "Bullet"
        }
      ],
      "default": "emdash"
    },
    {
      "type": "checkbox",
      "id": "show_index_as_superscript",
      "label": "Show index as superscript",
      "default": false
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ],
      "default": "text-left"
    },
    {
      "type": "select",
      "id": "desktop_width",
      "label": "Maximum desktop width",
      "info": "Applies to display \"Paragraph\"",
      "options": [
        {
          "value": "lg:w-9/12",
          "label": "9/12"
        },
        {
          "value": "lg:w-10/12",
          "label": "10/12"
        },
        {
          "value": "lg:w-11/12",
          "label": "11/12"
        },
        {
          "value": "lg:w-full",
          "label": "Full"
        }
      ],
      "default": "lg:w-full"
    },
    {
      "visible_if": "{{ settings.heading_uppercase == false }}",
      "type": "checkbox",
      "id": "uppercase_link_title",
      "label": "Uppercase",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_media_on_hover",
      "label": "Show images on hover",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "dim_nonhovered_links",
      "label": "Dim other links on hover",
      "info": "Does not apply to links as buttons with accent background color",
      "default": false
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "checkbox",
      "id": "display_link_as_button",
      "label": "Show links as buttons",
      "default": false
    },
    {
      "visible_if": "{{ section.settings.display_link_as_button }}",
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "default": "secondary",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ]
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme1",
      "label": "Color scheme"
    }
  ],
  "blocks": [
    {
      "name": "link",
      "type": "link",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "default": "/collections/all"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Link text",
          "default": "Link"
        },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom links",
      "category": "Navigation",
      "blocks": [
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        }
      ]
    }
  ]
}
{% endschema %}
