{% comment %}theme-check-disable TemplateLength{% endcomment %}
{%- liquid
  assign section_color = section.settings.color_scheme

  assign current_variant = product.selected_or_first_available_variant
  assign featured_media = current_variant.featured_media | default: product.featured_media

  assign preselect_variant = section.settings.preselect_variant

  if preselect_variant
    assign always_show_product_featured_media_first = section.settings.always_show_product_featured_media_first
  else
    assign always_show_product_featured_media_first = true
  endif

  if section.settings.variant_media_behavior == 'swap'
    assign swap_media_on_desktop = true
  else
    assign swap_media_on_desktop = false
  endif

  if always_show_product_featured_media_first
    assign featured_media = product.featured_media
  else
    assign featured_media = current_variant.featured_media | default: product.featured_media
  endif

  assign image_index = 0

  assign images_size = product.media | where: 'media_type', 'image' | size
  assign product_media_size = product.media | size

  if product_media_size > 1
    assign slideshow_enabled = true
  endif

  if images_size < product_media_size
    assign has_interactive_media = true
  else
    assign has_interactive_media = false
  endif

  if featured_media
    # theme-check-disable VariableName
    # https://github.com/Shopify/theme-tools/issues/397
    assign featured_media_position0 = featured_media.position | minus: 1
    # theme-check-enable VariableName
    assign remaining = product_media_size | minus: featured_media.position

    assign featured_media_slice = product.media | slice: featured_media_position0, 1
    assign first_half = product.media | slice: 0, featured_media_position0
    assign second_half = product.media | slice: featured_media.position, remaining
    assign media_array = featured_media_slice | concat: first_half | concat: second_half
  else
    assign media_array = product.media
  endif

  assign enable_video_looping = section.settings.enable_video_looping
  assign desktop_media_height = section.settings.desktop_media_height

  assign no_extra_info_col = true

  for block in section.blocks
    if block.settings.desktop_column == 'product_extra'
      assign no_extra_info_col = false
      break
    endif
  endfor

  assign complementary_products_block = section.blocks | where: 'type', 'complementary' | first

  assign has_single_media = false
  if product.media.size == 1
    assign has_single_media = true
  endif

  assign has_borders = true
  if settings.border_width == 0
    assign has_borders = false
  endif
-%}

<data-island
  class="bg-scheme-background text-scheme-text"
  id="{{ section.id }}"
  x-data="
    Product({
      product: {
        id: {{ product.id | json }},
        url: {{ product.url | json | escape }},
      },
      featuredMediaId: {% if featured_media %}{{ featured_media.id }}{% else %}null{% endif %},
      shouldUpdateHistoryState: true,
      swapMediaOnDesktop: {{ swap_media_on_desktop | json }},
      preselectVariant: {{ preselect_variant }},
      templateType: 'horizontal-gallery',
    })
  "
  src="product"
  role="banner"
  data-product-root="{{ section.id }}"
  data-color-scheme="{{ section_color }}"
>
  <div
    class="product-media-container relative col-span-full bg-scheme-background text-scheme-text"
    data-product-media-container
    style="--desktop-media-height: {{ desktop_media_height }}vh;"
  >
    <div
      class="{% if slideshow_enabled %}splide [&.splide]:visible{% endif %}"
      data-drag-disabled="{{ has_interactive_media }}"
      {% if slideshow_enabled %}
        data-slideshow-enabled="true"
      {% endif %}
      x-ref="splide"
      data-horizontal-gallery-splide
    >
      <div
        class="splide__track border-gridline-color {% unless has_single_media %}border-b-gridline{% else %}border-b-gridline lg:border-b-0{% endunless %} transition-[max-height] [.splide.is-active:not(.is-overflow)_&]:border-b-0"
      >
        <ul
          class="splide__list flex w-full"
          x-ref="mediaList"
        >
          {% for media in media_array %}
            {%- liquid
              assign preload = false
              assign loading = 'lazy'

              if section.index == 1 and forloop.first
                assign preload = true
              endif

              if section.index <= 3 and forloop.index <= 4
                assign loading = 'eager'
              endif

              assign aspect_ratio = media.aspect_ratio

              comment
                Shopify rounds video aspect ratios too much,
                resulting in alignment issues
              endcomment

              if media.media_type == 'video' and media.sources
                assign first_video_source = media.sources | first

                assign aspect_ratio = first_video_source.width | times: 1.00000000 | divided_by: first_video_source.height | append: ''
              elsif media.media_type == 'external_video'
                assign rounded_media_aspect_ratio_as_string = media.aspect_ratio | round: 2 | append: ''

                if rounded_media_aspect_ratio_as_string contains '1.77' or rounded_media_aspect_ratio_as_string contains '1.78'
                  assign aspect_ratio = '16 / 9'
                elsif rounded_media_aspect_ratio_as_string contains '0.562' or rounded_media_aspect_ratio_as_string contains '0.563'
                  assign aspect_ratio = '9 / 16'
                endif
              elsif media.media_type == 'model'
                assign aspect_ratio = '1 / 1'
              endif

              assign slide_classes = 'splide__slide relative border-gridline-color'

              unless forloop.last
                assign slide_classes = slide_classes | append: ' lg:border-r-gridline'
              endunless

              if media_array.size == 1
                assign slide_classes = slide_classes | append: ' lg:border-r-gridline w-full lg:w-fit'
              endif

              assign slide_classes = slide_classes | append: ' max-lg:[.splide:not(.is-active)_&]:w-full'
            -%}
            <li
              {% if forloop.first %}
                data-first-media
              {% endif %}
              class="{{ slide_classes }}{% unless media.id == featured_media.id %} max-lg:[.splide:not(.is-active)_&]:hidden{% endunless %}"
              data-index="{{ forloop.index0 }}"
              style="--media-aspect-ratio: {{ aspect_ratio }};"
            >
              <div
                class="relative inset-0 p-grid-media"
                data-slide-height-setter
              >
                <div class="relative aspect-media h-fit w-full lg:h-[var(--desktop-media-height)] lg:w-fit">
                  {%- render 'horizontal-gallery-product-media',
                    media: media,
                    image_index: image_index,
                    slideshow_enabled: slideshow_enabled,
                    section_color: section_color,
                    enable_video_looping: enable_video_looping,
                    preload: preload,
                    loading: loading
                  -%}
                </div>
              </div>
            </li>
            {%- liquid
              if media.media_type == 'image'
                assign image_index = image_index | plus: 1
              endif
            -%}
          {% endfor %}
        </ul>
      </div>
      {% assign first_3d_model = product.media
        | where: 'media_type', 'model'
        | first
      %}
      <data-island
        class="{% unless slideshow_enabled %}hidden{% else %}no-js:hidden{% endunless %} grid grid-cols-[minmax(0,_1fr)_auto] px-section-horizontal-spacing pb-product-slide-controls pt-2 text-scheme-text  {% if settings.slideshow_pagination_style == 'dots' %}gap-2{% else %}gap-3 md:gap-10{% endif %} [.splide.is-active:not(.is-overflow)_&]:hidden"
        x-data="
          {
            paginationIsWrapped: false,
            checkIfWrapped() {
              this.paginationIsWrapped = hasWrappedChildren(this.$refs.pagination)
            }
          }
        "
        x-init="checkIfWrapped"
        @resize.window.debounce.250="checkIfWrapped"
      >
        <ul x-ref="pagination" class="splide__pagination"></ul>
        <div
          class="splide__arrows col-end-last flex items-center justify-end gap-1"
          :class="{ 'items-start pt-[--arrows-wrapped-top-offset]' : paginationIsWrapped, 'items-center' : !paginationIsWrapped }"
        >
          <button class="splide__arrow splide__arrow--prev w-8">
            <span class="sr-only">
              {{- 'sections.slideshow.previous_slide' | t -}}
            </span>
            <span class="block">{% render 'icon-arrow-left' %}</span>
          </button>
          <button class="splide__arrow splide__arrow--next w-8">
            <span class="sr-only">
              {{- 'sections.slideshow.next_slide' | t -}}
            </span>
            <span class="block">{% render 'icon-arrow-right' %}</span>
          </button>
        </div>
      </data-island>
      {%- if first_3d_model -%}
        <div class="px-section-horizontal-spacing text-center">
          <button
            aria-label="{{ 'products.product.view_in_space_label' | t }}"
            class="product-single__view-in-space mb-2 mt-4 w-full max-w-sm border-text border-scheme-text py-2 pl-2 pr-4 text-center lg:my-4"
            data-shopify-xr
            data-shopify-model3d-id="{{ first_3d_model.id }}"
            data-shopify-title="{{ product.title }}"
            data-shopify-xr-hidden
          >
            <span class="inline-block w-6 align-middle">
              {%- render 'icon-3d-model' -%}</span
            ><span class="text-sm">
              {{- 'products.product.view_in_space' | t -}}
            </span>
          </button>
        </div>
      {%- endif -%}
    </div>
  </div>

  <div class="grid grid-flow-row-dense gap-gutter border-b-gridline border-t-0 border-gridline-color bg-gridline-color lg:grid-cols-12 lg:border-y-gridline">
    <div class="product-form-container h-full bg-scheme-background px-section-horizontal-spacing text-scheme-text lg:col-start-10 lg:col-end-13 {% if slideshow_enabled %}is-below-slideshow{% endif %}">
      <div
        class="product-block-area pb-product-template-col pt-section-vertical-spacing lg:sticky lg:top-sticky-header {% if settings.border_width == 0 %}lg:py-0{% else %}lg:py-section-vertical-spacing{% endif %}"
        style="--spacing-multiplier: {{ section.settings.description_col_space_above }};"
      >
        {%- liquid
          assign product_form_id = 'product-form-' | append: section.id
          comment
            set first_block_in_column to true at start of the loop
          endcomment
          assign first_block_in_column = true
        -%}

        {%- for block in section.blocks -%}
          {%- liquid
            assign block_wrapper_classes = ''

            if first_block_in_column
              assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--first'
            endif

            if block.type == 'collapsible_tab'
              assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--collapsible-tab'
              if has_borders
                assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--has-gridlines'
              endif
            endif

            if block.type == 'information_list' and block.settings.style != 'list'
              assign block_wrapper_classes = block_wrapper_classes
              if has_borders
                assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--has-gridlines'
              endif
            endif

            if block.type == 'product_group'
              assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--product-group'
            endif

            if block.type == 'variant_picker'
              assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--variant-picker'
            endif

            assign supported_blocks = 'title, vendor, price, product_group, variant_picker, quantity_selector, buy_buttons, inventory, location_inventory'
          -%}

          {%- if block.settings.desktop_column == 'product_form'
            or supported_blocks contains block.type
            or block.type == '@app'
          -%}
            <div
              class="product-block {% if block.type == 'collapsible_tab' %}mt-collapsible-tab{% else %}mt-product-block{% endif %} {{ block_wrapper_classes }}"
              {%- if first_block_in_column -%}
                style="--spacing-multiplier: 0;"
              {%- else -%}
                {%- if block.type == 'collapsible_tab' -%}
                  style="--collapsible-tab-spacing-multiplier: {{ block.settings.space_above }}"
                {%- elsif block.type == '@app' -%}
                  style="--spacing-multiplier: {{ section.settings.app_space_above }}"
                {%- else -%}
                  style="--spacing-multiplier: {{ block.settings.space_above }};"
                {%- endif -%}
              {%- endif -%}
              {{ block.shopify_attributes }}
            >
              {%- liquid
                case block.type
                  when '@app'
                    if section.settings.app_block_area == 'product_form'
                      render 'product-block-app', block: block, product: product
                    endif
                  when 'title'
                    render 'product-block-title', block: block
                  when 'vendor'
                    render 'product-block-vendor', block: block
                  when 'price'
                    render 'product-form-component-price', variant_fragment_id: block.id, current_variant: current_variant, price_text_size: block.settings.text_size, show_discount_tag: block.settings.show_discount_tag, discount_type: block.settings.discount_type, use_accent_color: block.settings.use_accent_color
                  when 'product_group'
                    render 'product-form-component-product-group', group_metafield_setting: block.settings.group_metafield_key, section_id: section.id, block_id: block.id, group_product_display_title_setting: block.settings.group_product_display_title_metafield_key, option_style: block.settings.option_style, full_width_buttons: block.settings.full_width_buttons, spread_options: block.settings.spread_options, hide_label: block.settings.hide_label, show_value_label: block.settings.show_value_label
                  when 'variant_picker'
                    render 'product-form-component-variant-picker', variant_fragment_id: block.id, section_id: section.id, option_style: block.settings.option_style, hide_option_labels: block.settings.hide_option_labels, hide_sold_out_variants: block.settings.hide_sold_out_variants, hide_unavailable_variants: block.settings.hide_unavailable_variants, preselect_variant: preselect_variant
                  when 'quantity_selector'
                    render 'product-form-component-quantity-selector', product_form_id: product_form_id, style: block.settings.style, full_width: block.settings.full_width, hide_label: block.settings.hide_label
                  when 'buy_buttons'
                    render 'product-form-component-buy-buttons', product_form_id: product_form_id, current_variant: current_variant, variant_fragment_id: block.id, show_payment_terms: block.settings.show_payment_terms, show_gift_card_recipient: block.settings.show_gift_card_recipient, enable_payment_button: block.settings.enable_payment_button, show_pickup_availability: block.settings.show_pickup_availability, space_above_pickup_availability: block.settings.space_above_pickup_availability, show_quantity_selector: false, preselect_variant: preselect_variant, full_width: block.settings.full_width, show_atc_price: block.settings.show_atc_price, atc_price_separator: block.settings.atc_price_separator, atc_price_separator_repeats: block.settings.atc_price_separator_repeats
                  when 'text'
                    render 'product-block-text', block: block
                  when 'richtext'
                    render 'product-block-richtext', block: block
                  when 'collapsible_tab'
                    render 'product-block-collapsible-tab', block: block
                  when 'icon_list'
                    render 'product-block-icon-list', block: block
                  when 'popup'
                    render 'product-block-popup', block: block, section_color: section_color
                  when 'custom_liquid'
                    render 'product-block-custom-liquid', block: block, product: product
                  when 'share'
                    render 'social-sharing', tag: 'h2', share_title: product.title, share_permalink: product.url, share_image: product, section_color: section_color
                  when 'information_list'
                    render 'product-block-information-list', block: block, product: product
                  when 'inventory'
                    render 'product-block-inventory', block: block, product: product, current_variant: current_variant
                  when 'location_inventory'
                    render 'product-block-location-inventory', block: block, product: product, current_variant: current_variant
                  when 'separator'
                    render 'product-block-separator'
                endcase

                comment
                  after rendering the first block, set first_block_in_column to false
                endcomment
                assign first_block_in_column = false
              -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
    <div
      class="product-description {% if no_extra_info_col %}lg:col-start-1{% else %}lg:col-start-4{% endif %} product-block-area h-full bg-scheme-background px-section-horizontal-spacing pb-product-template-col pt-section-vertical-spacing {% if settings.border_width == 0 %}lg:py-0{% else %}lg:py-section-vertical-spacing{% endif %} text-scheme-text lg:col-end-10"
      style="--spacing-multiplier: {{ section.settings.extra_information_col_space_above }};"
    >
      {%- liquid
        comment
          set first_block_in_column to true at start of the loop
        endcomment
        assign first_block_in_column = true
      -%}

      {%- for block in section.blocks -%}
        {%- liquid
          assign block_wrapper_classes = ''

          if first_block_in_column
            assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--first'
          endif

          if block.type == 'collapsible_tab'
            assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--collapsible-tab'
            if has_borders
              assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--has-gridlines'
            endif
          endif

          if block.type == 'complementary'
            assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--complementary'
            if has_borders
              assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--has-gridlines'
            endif
          endif

          if block.type == 'description' and product.description == blank
            assign block_wrapper_classes = block_wrapper_classes | append: ' hidden'
          endif

          if block.type == 'information_list' and block.settings.style != 'list'
            assign block_wrapper_classes = block_wrapper_classes
            if has_borders
              assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--has-gridlines'
            endif
          endif

          if forloop.last
            assign last_block_in_column = true
          endif
        -%}

        {%- if block.settings.desktop_column == 'product_description'
          or block.type == 'description'
          or block.type == '@app'
          or block.type == 'complementary'
        -%}
          <div
            class="product-block {% unless block.type == 'complementary'%}{% if block.type == 'collapsible_tab' %}mt-collapsible-tab{% else %}mt-product-block{% endif %}{% endunless %} {{ block_wrapper_classes }}"
            {%- if first_block_in_column -%}
              style="--spacing-multiplier: 0;"
            {%- else -%}
              {%- if block.type == 'collapsible_tab' -%}
                style="--collapsible-tab-spacing-multiplier: {{ block.settings.space_above }}"
              {%- elsif block.type == '@app' -%}
                style="--spacing-multiplier: {{ section.settings.app_space_above }}"
              {%- else -%}
                style="--spacing-multiplier: {{ block.settings.space_above }};"
              {%- endif -%}
            {%- endif -%}
            {{ block.shopify_attributes }}
          >
            {%- liquid
              case block.type
                when '@app'
                  if section.settings.app_block_area == 'product_description'
                    render 'product-block-app', block: block, product: product
                  endif
                when 'description'
                  render 'product-block-description', product: product, truncate_description: block.settings.truncate_description, max_words: block.settings.max_words
                when 'text'
                  render 'product-block-text', block: block
                when 'richtext'
                  render 'product-block-richtext', block: block
                when 'collapsible_tab'
                  render 'product-block-collapsible-tab', block: block
                when 'icon_list'
                  render 'product-block-icon-list', block: block
                when 'popup'
                  render 'product-block-popup', block: block
                when 'custom_liquid'
                  render 'product-block-custom-liquid', block: block, product: product
                when 'share'
                  render 'social-sharing', tag: 'h2', share_title: product.title, share_permalink: product.url, share_image: product
                when 'complementary'
                  render 'product-block-complementary', block: block, product: product, last_block_in_column: last_block_in_column
                when 'information_list'
                  render 'product-block-information-list', block: block, product: product
                when 'separator'
                  render 'product-block-separator'
              endcase

              comment
                after rendering the first block, set first_block_in_column to false
              endcomment
              assign first_block_in_column = false
            -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    {%- unless no_extra_info_col -%}
      <div class="product-block-area h-full bg-scheme-background px-section-horizontal-spacing {% unless settings.border_width == 0 %}py-section-vertical-spacing{% endunless %} text-scheme-text lg:col-start-1 lg:col-end-4">
        {%- liquid
          comment
            set first_block_in_column to true at start of the loop
          endcomment
          assign first_block_in_column = true
        -%}
        {%- for block in section.blocks -%}
          {%- liquid
            assign block_wrapper_classes = ''

            if first_block_in_column
              assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--first'
            endif

            if block.type == 'collapsible_tab'
              assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--collapsible-tab'
              if has_borders
                assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--has-gridlines'
              endif
            endif

            if block.type == 'information_list' and block.settings.style != 'list'
              assign block_wrapper_classes = block_wrapper_classes
              if has_borders
                assign block_wrapper_classes = block_wrapper_classes | append: ' product-block--has-gridlines'
              endif
            endif
          -%}

          {%- if block.settings.desktop_column == 'product_extra'
            or block.type == '@app'
          -%}
            <div
              class="product-block {% if block.type == 'collapsible_tab' %}mt-collapsible-tab{% else %}mt-product-block{% endif %} {{ block_wrapper_classes }}"
              {%- if first_block_in_column -%}
                style="--spacing-multiplier: 0;"
              {%- else -%}
                {%- if block.type == 'collapsible_tab' -%}
                  style="--collapsible-tab-spacing-multiplier: {{ block.settings.space_above }}"
                {%- elsif block.type == '@app' -%}
                  style="--spacing-multiplier: {{ section.settings.app_space_above }}"
                {%- else -%}
                  style="--spacing-multiplier: {{ block.settings.space_above }};"
                {%- endif -%}
              {%- endif -%}
              {{ block.shopify_attributes }}
            >
              {%- liquid
                case block.type
                  when '@app'
                    if section.settings.app_block_area == 'product_extra'
                      render 'product-block-app', block: block, product: product
                    endif
                  when 'text'
                    render 'product-block-text', block: block
                  when 'richtext'
                    render 'product-block-richtext', block: block
                  when 'collapsible_tab'
                    render 'product-block-collapsible-tab', block: block
                  when 'icon_list'
                    render 'product-block-icon-list', block: block
                  when 'popup'
                    render 'product-block-popup', block: block
                  when 'custom_liquid'
                    render 'product-block-custom-liquid', block: block, product: product
                  when 'share'
                    render 'social-sharing', tag: 'h2', share_title: product.title, share_permalink: product.url, share_image: product
                  when 'information_list'
                    render 'product-block-information-list', block: block, product: product
                  when 'separator'
                    render 'product-block-separator'
                endcase

                comment
                  after rendering the first block, set first_block_in_column to false
                endcomment
                assign first_block_in_column = false
              -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endunless -%}
  </div>

  {% unless product == empty %}
    <script type="application/json" id="ModelJson-{{ section.id }}">
      {{ product.media | where: 'media_type', 'model' | json }}
    </script>
    {% render 'product-shopify-xr-script' %}
  {% endunless %}

  <div data-variant-fragment="current-variant" hidden>
    {% if current_variant %}
      <script data-current-variant type="application/json">
        {{ current_variant | json }}
      </script>
    {% endif %}
  </div>
</data-island>

{% liquid
  if section.settings.enable_image_zoom
    render 'product-image-zoom'
  endif

  if section.settings.override_header_footer_color_scheme
    render 'header-footer-color-scheme-override', section_color: section_color
  endif
%}

<script type="application/ld+json">
  {{ product | structured_data }}
</script>

{%- liquid
  if complementary_products_block
    # theme-check-disable NestedSnippet
    render 'product-block-complementary-products-output', block: complementary_products_block, desktop_sizes_base: '50vw'
    # theme-check-enable NestedSnippet
  endif
-%}

{% schema %}
{
  "name": "Product - horizontal",
  "settings": [
    {
      "type": "header",
      "content": "Product variants"
    },
    {
      "type": "checkbox",
      "id": "preselect_variant",
      "label": "Select the first available variant",
      "info": "When unchecked, adding to the cart will not be possible until each product option has a selection.",
      "default": true
    },
