{%- liquid
  assign section_color = section.settings.color_scheme

  assign first_block_ratio = section.settings.first_block_ratio | plus: 0

  case section.settings.first_block_width
    when 'third'
      assign first_block_width = 'lg:col-span-4'
      assign second_block_width = 'lg:col-span-8'
    when 'half'
      assign first_block_width = 'lg:col-span-6'
      assign second_block_width = 'lg:col-span-6'
    when 'two_thirds'
      assign first_block_width = 'lg:col-span-8'
      assign second_block_width = 'lg:col-span-4'
  endcase

  if section.blocks.size == 1
    assign first_block_width = 'lg:col-span-12'
  endif
-%}

<section
  class="grid grid-flow-row-dense grid-cols-1 gap-gutter overflow-hidden border-b-gridline border-gridline-color bg-gridline-color lg:grid-cols-12"
  {% if first_block_ratio != 0 %}
    style="--first-block-top-padding-desktop: {{ 1 | divided_by: first_block_ratio | times: 100 }}%;"
  {% endif %}
>
  {%- for block in section.blocks -%}
    {%- liquid
      if forloop.first and first_block_ratio != 0
        assign ratio_block = true
      else
        assign ratio_block = false
      endif

      assign section_color = block.settings.color_scheme
      assign title = block.settings.title
      assign text = block.settings.text
      assign subheading = block.settings.subheading

      assign text_size_class = block.settings.text_size
      assign text_align = block.settings.text_alignment
      assign text_position = block.settings.position

      assign font = block.settings.font

      assign cta_link = block.settings.cta_link
      assign cta_text = block.settings.cta_text
      assign cta_style = block.settings.cta_style
      assign cta_button_style = block.settings.cta_button_style
    -%}
    <div
      class="relative flex bg-scheme-background px-section-horizontal-spacing py-section-vertical-spacing text-scheme-text {% cycle first_block_width, second_block_width %} {{ text_position }}{% if ratio_block %} lg:pt-[--first-block-top-padding-desktop]{% endif %}"
      data-color-scheme="{{ section_color }}"
      {{ block.shopify_attributes }}
    >
      <div class="{{ text_align }} break-word w-full {% if ratio_block %}lg:absolute lg:inset-0 lg:flex lg:px-section-horizontal-spacing lg:py-section-vertical-spacing lg:overflow-y-auto{% endif %}">
        {% if ratio_block %}
          <div class="contents lg:my-auto lg:block">
        {% endif %}

        {% render 'section-content',
          title: title,
          subheading: subheading,
          text: text,
          text_size_class: text_size_class,
          text_font_class: font,
          cta_link: cta_link,
          cta_text: cta_text,
          cta_style: cta_style,
          cta_button_style: cta_button_style
        %}

        {% if ratio_block %}
          </div>
        {% endif %}
      </div>
    </div>
  {%- endfor -%}
</section>

{% schema %}
{
  "name": "Text split",
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "aside"
    ]
  },
  "settings": [
    {
      "type": "select",
      "id": "first_block_width",
      "label": "Width of first block on desktop",
      "default": "half",
      "options": [
        {
          "value": "third",
          "label": "One third"
        },
        {
          "value": "half",
          "label": "One half"
        },
        {
          "value": "two_thirds",
          "label": "Two thirds"
        }
      ]
    },
    {
      "type": "select",
      "id": "first_block_ratio",
      "label": "First block aspect ratio on desktop",
      "default": "0",
      "options": [
        {
          "value": "0",
          "label": "Natural"
        },
        {
          "value": "1",
          "label": "Square"
        },
        {
          "value": "1.3",
          "label": "Landscape"
        },
        {
          "value": "0.8",
          "label": "Portrait"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "limit": 2,
      "settings": [
        {
          "visible_if": "{{ block.settings.title != blank }}",
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
        },
        {
          "visible_if": "{{ block.settings.text != blank }}",
          "type": "select",
          "id": "font",
          "label": "Text font",
          "options": [
            {
              "value": "font-heading",
              "label": "Heading"
            },
            {
              "value": "font-body",
              "label": "Body"
            }
          ],
          "default": "font-body"
        },
        {
          "visible_if": "{{ block.settings.text != blank }}",
          "type": "select",
          "id": "text_size",
          "label": "Text size",
          "options": [
            {
              "value": "text-base",
              "label": "Body"
            },
            {
              "value": "text-heading-standard",
              "label": "Standard heading"
            },
            {
              "value": "text-heading-feature",
              "label": "Feature heading"
            },
            {
              "value": "text-heading-secondary",
              "label": "Secondary heading"
            }
          ],
          "default": "text-base"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Alignment",
          "options": [
            {
              "value": "text-left",
              "label": "Left"
            },
            {
              "value": "text-center",
              "label": "Center"
            },
            {
              "value": "text-right",
              "label": "Right"
            }
          ],
          "default": "text-left"
        },
        {
          "type": "select",
          "id": "position",
          "label": "Text position",
          "options": [
            {
              "value": "items-start",
              "label": "Top"
            },
            {
              "value": "items-center",
              "label": "Middle"
            },
            {
              "value": "items-end",
              "label": "Bottom"
            }
          ],
          "default": "items-center"
        },
        {
          "type": "header",
          "content": "Call to action"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "cta_style",
          "label": "Style",
          "options": [
            {
              "value": "link",
              "label": "Link"
            },
            {
              "value": "button",
              "label": "Button"
            }
          ],
          "default": "link"
        },
        {
          "visible_if": "{{ block.settings.cta_style == 'button' }}",
          "type": "select",
          "id": "cta_button_style",
          "label": "Button style",
          "default": "secondary",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            }
          ]
        },
        {
          "type": "header",
          "content": "Color"
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "default": "scheme1",
          "label": "Color scheme"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text split",
      "category": "Text",
      "blocks": [
        {
          "type": "text",
          "settings": {
            "text_size": "text-heading-standard",
            "font": "font-heading"
          }
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
