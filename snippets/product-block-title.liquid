{% liquid
  if template.name == 'product'
    assign tag = 'h1'
  else
    assign tag = 'h2'
  endif

  assign title_font = block.settings.font | default: 'font-heading'
  assign title_text_size = block.settings.text_size | default: 'text-heading-feature'
  assign show_inline_price = block.settings.show_inline_price | default: false
%}

{% if show_inline_price %}
  <div class="flex items-baseline justify-between gap-4 max-w-2xl">
{% endif %}

<{{ tag }}
  class="product-title-block {{ title_font }} break-word {{ title_text_size }}"
  data-product-title
>
  {%- if wrap_with_link -%}
    <a href="{{ product.url }}">{{ product.title }}</a>
  {%- else -%}
    {{ product.title }}
  {%- endif -%}
</{{ tag }}>

{% if show_inline_price %}
    {%- render 'product-form-component-price',
      product: product,
      current_variant: current_variant,
      variant_fragment_id: 'inline-title-price',
      price_text_size: title_text_size,
      price_font_class_override: title_font,
      show_discount_tag: false,
      hide_tax_shipping: true
    -%}
  </div>
{% endif %}